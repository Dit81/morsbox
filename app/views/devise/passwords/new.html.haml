#content.wide
  %h2= t.devise.forgot_your_password
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    %p
      = f.label :email, resource.class.human_attribute_name(:email)
      %br
      = f.email_field :email
    %p= f.submit t.devise.send_me_reset
