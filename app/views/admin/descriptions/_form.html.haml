= form_for [:admin, @project, description], :html => { :multipart => true } do |f|
  %p
    = f.label :image
    %br
    = f.file_field :image
    = check_box_tag "description[image_file_name]", ""
    = f.label :image_file_name
  %p.narrow
    = f.label :text_cs
    %br
    = f.text_area :text_cs
  %p.narrow
    = f.label :text_en
    %br
    = f.text_area :text_en
  %p.narrow
    = f.label :text_ru
    %br
    = f.text_area :text_ru
  %p
    = f.check_box :enabled
    = f.label :enabled
  %p
    = f.label :show_order
    %br
    = f.text_field :show_order
  %p
    = f.submit
