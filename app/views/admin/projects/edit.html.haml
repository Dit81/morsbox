#content.wide
  %h1= t.project.edit
  = render "form"
  %p.clear
  %a.dialog_open{:dialog_id => :dialog_new_description}= t.description.new
  %table
    %tr
      %th= t.description.image
      %th= t.description.text
      %th= t.admin.actions
    - @descriptions.each do |description|
      %tr
        %td
          %a.dialog_open{:dialog_id => "dialog_description_"+description.id.to_s}
            = image_tag description.image.url(:thumb)
        %td!= description.text
        %td
          = link_to_toggle [@project, description]
          = link_to "<<", admin_project_description_path(@project, description, :order => :top), :method => :put
          = link_to "<", admin_project_description_path(@project, description, :order => :up), :method => :put
          = description.show_order
          = link_to ">", admin_project_description_path(@project, description, :order => :down), :method => :put
          = link_to ">>", admin_project_description_path(@project, description, :order => :bottom), :method => :put
          = link_to t.admin.delete, admin_project_description_path(@project, description), :method => :delete, :confirm => t.admin.delete_confirmation

