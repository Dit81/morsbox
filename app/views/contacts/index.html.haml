#content.wide
  != @contact_info
  = form_for @contact, :as => :contact, :url => contacts_path do |f|
    %p
      = f.label :name
      %br
      = f.text_field :name
    %p
      = f.label :email
      %br
      = f.text_field :email
    %p
      = f.label :phone
      %br
      = f.text_field :phone
    %p
      = f.label :message
      %br
      = f.text_area :message
    %p= f.submit